<% layout("layouts/boilerplate") %>
<div class="row my-3">
  <div class="col-10 offset-3">
    <h3><%= listing.title %></h3>
    </div>
    <div class="card col-8 offset-2" >
      <img src="<%= listing.image %>" class="card-img-top show-img " alt="..." style="height: 400px;">
      <div class="card-body mt-2">
        <p class="card-text">
          <%= listing.description %><br>
          <%= listing.price.toLocaleString("en-IN") %><br>0
          <%= listing.location %><br>
          <%= listing.country %><br>
        </p>
      </div>
    </div>
  </div>
<div class=" container row text-center d-flex align-items-center justify-content-around ">
<div class="col-4  px-2 " >
    <a href="/listings/<%= listing._id %>/edit" style="margin-left: 7rem; height: 100%; width: 80px; "class="btn btn-dander btn-danger px-2">Edit</a>
</div>
<div class="col-4 ">
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark">Delete</button>
    </form>
</div>   
</div> 

<hr>
   <div class="col-10  offset-1">
      <h5>Leave a Review</h5>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="my-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]"/>

        </div>
        <div class="my-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea id="comment" 
                    name="review[comment]" 
                    placeholder="Comments" 
                    style="border: none; border-bottom: 1px solid black; outline: none; resize: none; height: 30px; text-decoration: none; box-shadow: none; border-radius: 0 !important;" 
                    class="form-control " required></textarea>
                  <div class="invalid-feedback">
                    Comments is Required before Submit
                  </div>

      </div>
      
      <button class="btn btn-outline-dark my-3">Submit</button>
      </form>
      <hr>
      <br>
    </div>
    <div class="col-12 my-3 offset-1 row d-flex ">
      <p class="text-center"><b>All Reviews</b></p>
      
      <% for (review of listing.reviews){ %>

        <div class="card col-md-5 mx-2 my-2" style="border: 1px solid black !important; border: 15px;">
          <div class="card-body p-2">
            <h5 class="card-title">Card title</h5>
            <p class="card-text"><%= review.comment  %> </p>
            <p class="card-text"> <%= review.rating  %> stars</p>
            <div class="d-flex justify-content-between ">
              <form action="/listings/<%= listing._id%>/reviews/<%= review._id%>?_method=DELETE" method="POST">
                <BUTTON class="card-link btn btn-primary">Edit</BUTTON> 
              </form>
              <form action="/listings/<%= listing._id%>/reviews/<%= review._id%>?_method=DELETE" method="POST">
                <BUTTON class="card-link btn btn-danger">Delete</BUTTON> 
              </form> 
            </div>
          </div>

        </div>
        <% } %>
      </ul>
    </div>

  
